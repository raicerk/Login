
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="es-cl">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Raicerk Incorporated</title>

    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="~/Content/custom.css" rel="stylesheet">
</head>

<body style="background:#F7F7F7;">
    <div class="">
        <a class="hiddenanchor" id="toregister"></a>
        <a class="hiddenanchor" id="tologin"></a>

        <div id="wrapper">
            <div id="login" class="form">
                <section class="login_content">
                    <form>
                        <h1>Login</h1>
                        <div>
                            <input type="text" class="form-control" placeholder="Usuario" name="txtUsuario" id="txtUsuario" required="" />
                        </div>
                        <div>
                            @*<input type="password" class="form-control" placeholder="Contraseña" required="" />*@
                            <div id="myCanvasContainer">
                                <canvas width="300" height="300" id="myCanvas">
                                    <p>Anything in here will be replaced on browsers that support the canvas element</p>
                                </canvas>
                            </div>
                            <div id="tags">
                                <ul id="CvDatos">
                                    @Html.Raw(ViewBag.Lista)
                                </ul>
                            </div>
                        </div>
                        <div>
                            <a class="btn btn-default submit" href="javascript:void(0);" onclick="Enviar()">Iniciar sesión</a>
                            <a class="reset_pass" href="#">Olvidaste tu contraseña?</a>
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">

                            <p class="change_link">
                                Nuevo en este sitio?
                                <a href="#toregister" class="to_register"> Crear cuenta </a>
                            </p>
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1><i class="fa fa-share-alt" style="font-size: 26px;"></i> Raicerk Incorporated</h1>

                                <p>©2016 todos los derechos reservados. Raicerk Incorporated. Terminos y condiciones</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/tagcanvas.js" type="text/javascript"></script>
    <script type="text/javascript">
      window.onload = function() {
        try {
          TagCanvas.Start('myCanvas','tags',{
            textColour: '#9c9c9c',
            outlineColour: '#73879C',
            reverse: true,
            depth: 0.8,
            maxSpeed: 0.05
          });
        } catch(e) {
          // something went wrong, hide the canvas container
          document.getElementById('myCanvasContainer').style.display = 'none';
        }
      };
    </script>

    <script>

        function Home(cadena) {
            var self = this;
            self.Cadena = cadena;
        }
        



        function Enviar() {

            var home = new Home($("#txtUsuario").val());

            jQuery.ajax({
                type: "POST",
                url: '@Url.Action("CargaLista")',
                data: JSON.stringify(home),
                datatype: "JSON",
                contentType: "application/json; charset=utf-8",
                beforeSend: function () {

                },
                success: function (returndata) {
                    $("#CvDatos").html(returndata.Lista);
                    TagCanvas.Start('myCanvas', 'tags', {
                        textColour: '#9c9c9c',
                        outlineColour: '#73879C',
                        reverse: true,
                        depth: 0.8,
                        maxSpeed: 0.05
                    });
                }
            });
        }

        $("#txtUsuario").keyup(function () {
            Enviar();
        });
        
    </script>



</body>
</html>